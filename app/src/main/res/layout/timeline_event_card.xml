<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:padding="2dp"
    >
    <RelativeLayout
        android:id="@+id/timeline_card"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_event"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:id="@+id/timeline_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/timeline_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="10"
                android:textColor="@color/colorAccentLight"
                />
            <TextView
                android:id="@+id/timeline_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:00-2:00"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColor="@color/colorAccentLight"/>
        </LinearLayout>
        <TextView
            android:id="@+id/timeline_card_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a descrpition"
            android:layout_below="@id/timeline_card_title"
            android:textSize="14sp"
            android:textColor="@color/colorAccentLight"
            />
    </RelativeLayout>
</RelativeLayout>