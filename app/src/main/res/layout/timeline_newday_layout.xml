<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:padding="2dp"
    >
    <RelativeLayout
        android:id="@+id/timeline_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_card01"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:id="@+id/timeline_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/timeline_card_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="August 21, 2020"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="10"
                />
            <TextView
                android:id="@+id/timeline_card_day_abbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08/21/2020"
                android:textSize="14sp"
                android:layout_weight="1" />
        </LinearLayout>
        <TextView
            android:id="@+id/timeline_card_event_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events: 0"
            android:textSize="14sp"
            android:layout_below="@id/timeline_card_title"
            />
    </RelativeLayout>
</RelativeLayout>